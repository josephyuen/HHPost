<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_countdown_bg">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/app_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            android:id="@+id/imageView"/>

    <EditText
            android:id="@+id/login_phone"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="72dp"
            android:hint="请输入您的手机号"
            android:inputType="text"
            android:digits="1234567890"
            android:textSize="18sp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/shape_edit_cursor"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:background="@drawable/shape_login_edit_bg"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_login_edit_bg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="52dp"
            android:textSize="18sp"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:inputType="text"
            android:digits="1234567890"
            android:paddingStart="15dp"
            android:textCursorDrawable="@drawable/shape_edit_cursor"
            app:layout_constraintTop_toBottomOf="@+id/login_phone"
            android:id="@+id/login_verify_code"/>

    <TextView
            android:id="@+id/get_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="获取验证码"
            android:textColor="@color/black"
            android:layout_marginStart="220dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/login_verify_code"
            app:layout_constraintTop_toTopOf="@+id/login_verify_code"/>

    <Button
            android:text="登录"
            android:textSize="20sp"
            android:id="@+id/login_ensure"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/login_verify_code"/>


</androidx.constraintlayout.widget.ConstraintLayout>